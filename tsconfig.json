{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // Added eslint and next config, because of Parsing error: was not found by the project service. Consider either including it in the tsconfig.json or including it in allowDefaultProject (see: https://github.com/typescript-eslint/typescript-eslint/issues/9753#issuecomment-2296449025)
    "eslint.config.mjs",
    "next.config.js",
    "postcss.config.mjs",
    ".next/dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
